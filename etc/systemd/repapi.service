[Unit]
    Description=JetRep Rest API Service
    Documentation=http://jetrep.hzcsai.com
    After=multi-user.target

[Service]
    Type=simple
    User=nano
    Group=nano
    UMask=0000
    WorkingDirectory=/home/nano/omega/jetson/jetrep
    Environment="PYTHONPATH=/home/nano/omega/jetson/jetrep"
    Restart=always
    RestartSec=5
    ExecStart=/usr/bin/python3 jetrep/api/server.py --host 127.0.0.1 --port 8282 --rpc_host 127.0.0.1 --rpc_port 8181
    TimeoutStartSec=10
    TimeoutStopSec=5
    StandardOutput=syslog
    StandardError=syslog

[Install]
    WantedBy=multi-user.target
